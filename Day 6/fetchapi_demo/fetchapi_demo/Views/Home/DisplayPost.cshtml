<h1 style="text-align:center"> Post Data from JSON Placeholder </h1>

<button class="btn btn-primary" onclick="getPostData()">Show Post</button>
<table class="table table-primary"></table>

<script>
    function getPostData()
    {
        var url = "https://jsonplaceholder.typicode.com/posts";

        fetch(url).then(responseType => responseType.json())
                   .then(data => {
                       alert('We Got the data'); //we will display the data here in table, useing Javascript / JQuery
                       console.log(data);
                        for(var i=0;i<data.length;i++)
                       {
                           $("table").append("<tr>" +
                           "<td>" + data[i].id + "</td>" +
                           "<td>" + data[i].userId+ "</td>" +
                           "<td>" + data[i].title + "</td>" +
                           "<td>" + data[i].body+ "</td>" +                            
                            "</tr>")
                       }
                   })
                   .catch( err=>{
                       alert('Errrorrrrr !! ');
                   })
    }
</script>